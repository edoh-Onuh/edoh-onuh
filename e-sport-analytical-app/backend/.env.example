# Environment Variables for E-Sport Analytics Platform
# Copy this file to .env and fill in your API keys

# ===============================
# Database Configuration
# ===============================
DB_USER=your_mysql_username
DB_PASS=your_mysql_password
DB_HOST=localhost
DB_NAME=esport_analytics

# ===============================
# External E-Sports APIs
# ===============================

# Riot Games API (Valorant, League of Legends)
# Get your key from: https://developer.riotgames.com/
RIOT_API_KEY=RGAPI-your-riot-api-key-here

# Steam Web API (CS:GO, Dota 2)
# Get your key from: https://steamcommunity.com/dev/apikey
STEAM_API_KEY=your-steam-api-key-here

# FACEIT API (Multiple games, tournaments)
# Get your key from: https://developers.faceit.com/
FACEIT_API_KEY=your-faceit-api-key-here

# Optional: Third-party APIs
# Stratz API for Dota 2 (premium features)
STRATZ_API_KEY=your-stratz-api-key-here

# ===============================
# API Rate Limiting & Caching
# ===============================
API_CACHE_TTL=300  # Cache time-to-live in seconds (5 minutes)
API_REQUEST_TIMEOUT=30  # Request timeout in seconds
MAX_CONCURRENT_REQUESTS=10  # Maximum concurrent API requests

# ===============================
# Application Settings
# ===============================
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# ===============================
# Azure Configuration (Optional)
# ===============================
# VAULT_URL=https://your-vault.vault.azure.net/
# AZURE_CLIENT_ID=your-azure-client-id
# AZURE_CLIENT_SECRET=your-azure-client-secret
# AZURE_TENANT_ID=your-azure-tenant-id

# ===============================
# Redis Configuration (Optional)
# ===============================
# For production caching instead of in-memory
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=your-redis-password

# ===============================
# Background Tasks Configuration
# ===============================
DATA_SYNC_INTERVAL=300  # Data sync interval in seconds (5 minutes)
BACKGROUND_TASK_ENABLED=true
AUTO_SYNC_ON_STARTUP=true

# ===============================
# Frontend Configuration
# ===============================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===============================
# Production Settings
# ===============================
# SECRET_KEY=your-secret-key-for-production
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
